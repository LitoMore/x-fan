{
  "name": "x-fan",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rematch/core": "^1.0.6",
    "cordova-android": "^7.1.4",
    "cordova-browser": "^5.0.4",
    "cordova-ios": "^4.5.5",
    "cordova-osx": "^4.0.2",
    "cordova-plugin-statusbar": "^2.4.2",
    "cordova-plugin-whitelist": "^1.3.3",
    "cordova-windows": "^6.0.1",
    "fanfou-sdk-browser": "^0.3.0",
    "framework7": "^3.5.2",
    "framework7-icons": "^0.9.1",
    "framework7-react": "^3.5.2",
    "material-design-icons-iconfont": "^4.0.2",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.1.0",
    "react-scripts": "^2.1.1"
  },
  "scripts": {
    "start": "npm run remove:www && react-scripts start",
    "build": "react-scripts build",
    "build:cordova": "cp -r build www && node __script.js",
    "test": "xo && npm run build",
    "eject": "react-scripts eject"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "xo": "^0.23.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "node",
      "browser"
    ],
    "extends": [
      "xo/esnext",
      "xo-react"
    ],
    "ignores": [
      "hooks/**",
      "platforms/**",
      "plugins/**",
      "res/**",
      "www/**"
    ],
    "rules": {
      "import/no-unassigned-import": [
        2,
        {
          "allow": [
            "**/style/*.css",
            "**/*.css"
          ]
        }
      ],
      "unicorn/no-abusive-eslint-disable": 0
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {}
    },
    "platforms": [
      "browser",
      "ios",
      "android",
      "osx",
      "windows"
    ]
  }
}
